@model Message
@{
	ViewData["Title"] = "MessageDetail";
	Layout = "~/Views/Layout/Index.cshtml";
}

<input type="Hidden" asp-for="MessageID" />

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Gelen Mesaj Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Gönderen:
							<b> @Model.NameSurname  </b>
							Email:
							<b> @Model.Email </b>
							Tarih:
							<b> @Model.SendDate </b>
							<br />
							Mesaj: 
							<b> @Model.MessageDetail </b>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

