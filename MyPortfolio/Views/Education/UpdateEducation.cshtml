@model Education
@{
	ViewData["Title"] = "UpdateEducation";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Eğitimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Eğitim Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Eğitim ile ilgili ekleme işlemlerini aşağıdan yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" aso-for="EducationID" />
							<label>Üniversite Adı</label>
							<input type="text" asp-for="University" class="form-control" />
							<br />
							<label>Fakülte Adı</label>
							<input type="text" asp-for="Faculty" class="form-control" />
							<br />
							<label>Bölüm Adı</label>
							<input type="text" asp-for="Departman" class="form-control" />
							<br />
							<label>Tarih</label>
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							<button class="btn btn-warning">Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

