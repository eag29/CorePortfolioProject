@model List<Contact>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgileri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim Bilgileri ile ilgili işlemleri aşağıdan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Telefon</th>
									<th scope="col">E Mail</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<input type="hidden" @item.Description />
									<input type="hidden" @item.Adress />
									<input type="hidden" @item.Title />
									<tr>
										<td>@item.ContactID</td>
										<td>@item.Phone</td>
										<td>@item.Email</td>
										<td> <a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-secondary"> Güncelle </a> </td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

